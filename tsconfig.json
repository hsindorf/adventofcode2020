{
	"compilerOptions": {
		"target": "es6",
		"module": "commonjs",
		"lib": ["es2015", "es2016", "es2017", "dom"],
		"strict": true,
		"noImplicitAny": false,
		"sourceMap": true,
		"declaration": false,
		"allowSyntheticDefaultImports": false,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"outDir": "dist",
		"typeRoots": ["node_modules/@types"]
	},
	"include": ["src", "utils"]
}
